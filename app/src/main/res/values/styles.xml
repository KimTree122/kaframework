<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无标题栏主题-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--状态栏-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>


    <!--Button 自定义颜色-->
    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.bg_blue">
        <item name="android:background">@drawable/dra_btn_blue</item>
    </style>
    <style name="ButtonStyle.bg_red">
        <item name="android:background">@drawable/dra_btn_red</item>
    </style>
    <style name="ButtonStyle.bg_yellow">
        <item name="android:background">@drawable/dra_btn_yellow</item>
    </style>
    <style name="ButtonStyle.bg_green">
        <item name="android:background">@drawable/dra_btn_green</item>
    </style>
    <style name="ButtonStyle.bg_purple">
        <item name="android:background">@drawable/dra_btn_purple</item>
    </style>

    <!--Button 需全局设置-->
    <style name="ButtonWave" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal" > @color/androidbluel</item>
        <item name="colorControlHighlight">@color/androidblack</item>
    </style>

    <!--TextView-->
    <style name="TextView30Size" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/androidblack</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView20Size" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/androidblack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView15Size" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/androidblack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--DialogFragment-->
    <style name="Base_AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">

        <!--不设置在6.0以上会出现，宽度不充满屏幕的情况-->
        <item name="windowMinWidthMinor">90%</item>

        <!-- 取消标题栏，如果在代码中settitle的话会无效 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 标题的和Message的文字颜色 -->
        <!--<item name="android:textColorPrimary">@color/black</item>-->

        <!-- 在使用v7包的alertDialog中无效，6.0中的app.alertDialog有效，这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/white</item>

        <!-- 6.0有效，设置整个背景的颜色，在颜色后面就透明度无法使dailog透明 -->
        <!-- 慎用，会出现奇怪的背景边框-->
        <!--<item name="android:background">@color/white</item>-->

        <!-- 有时无效，在某些系统上面设置背景颜色之后出现奇怪的背景，处这里设置背景为透明，为了隐藏边框 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowFrame">@null</item>-->

        <!-- 进入和退出动画，左进右出（系统自带） -->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->

        <!-- 按钮字体颜色,全部一起改，单个改需要在Java代码中修改 -->
        <item name="colorAccent">@color/androidblued</item>
    </style>

</resources>
